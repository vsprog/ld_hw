@model CartViewModel

<h2>The cart</h2>
<table class="table table-bordered table-striped cart">
    <thead>
        <tr>
            <th>Quantity</th>
            <th>Item</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Lines)
        {
            <tr>
                <td class="text-center">@line.Quantity</td>
                <td class="text-left">@line.Product.Name</td>
                <td class="text-right">$@line.Product.Price</td>
                <td class="text-right">$@((line.Quantity * line.Product.Price))</td>
                <td>
                    <button data-product-id="@line.Product.Id" class="btn btn-sm btn-danger">
                        Remove
                    </button>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">$<span class="cart__total-sum">@Model.TotalSum</span></td>
        </tr>
    </tfoot>
</table>
<div class="text-center">
    <a class="btn btn-info" href="/">Continue shopping</a>
</div>