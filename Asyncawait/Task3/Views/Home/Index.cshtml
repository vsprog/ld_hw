@model IEnumerable<Product>

<div class="store">
    @foreach (var p in Model)
    {
        <div class="card card-outline-primary m-1 p-1">
            <div class="bg-faded p-1">
                <h4>
                    @p.Name
                    <span class="badge badge-pill badge-primary" style="float:right">
                        <small>$@p.Price</small>
                    </span>
                </h4>
            </div>
            <div class="row m-1">
                <div class="card-text p-1 col-7 mr-auto">@p.Description</div>
                <button data-product-id="@p.Id" class="btn btn-outline-info btn-sm pull-right mt-auto h-25">
                    Add To Cart
                </button>
            </div>
        </div>
    }
</div>
